<div class="col-lg-4" > 
<div class="card rounded-0 mt-5 mb-4">
	<div class="card-body">
		<h2 class="text-center">Create New Employee </h2>
	</div>
</div>

<%= form_with model:@employee do|form| %>
<div class="row">
	<div class="col-lg-5">
		<div class="form-group">
			<%= form.label :fname,class:'mb-2'%>
			<%= form.text_field :fname, class: 'form-control form-control-lg rounded-0' %>
		</div>
	</div>
	<div class="col-lg-5">
		<div class="form-group">
			<%= form.label :lname,class:'mb-2'%>
			<%= form.text_field :lname, class: 'form-control form-control-lg rounded-0' %>
		</div>
	</div>
</div>
<div class="row">
	<div class="col-lg-5">
		<div class="form-group">
			<%= form.label :email,class:'mb-2'%>
			<%= form.text_field :email, class: 'form-control form-control-lg rounded-0' %>
		</div>
	</div>

	<div class="col-lg-5">
		<div class="form-group">
			<%= form.label :city,class:'mb-2'%>
			<%= form.text_field :city, class: 'form-control form-control-lg rounded-0' %>
		</div>
	</div>
</div>
<div class="row"> 
	<div class="col-lg-5">
		<div class="form-group">
			<%= form.label :state,class:'mb-2'%>
			<%= form.text_field :state, class: 'form-control form-control-lg rounded-0' %>
		</div>
	</div>
	</div>
		<div class="col-lg-5">
			<div class="form-group">
				<%= form.label :country,class: 'mb-2'%>
				<%= form.text_field :country, class: 'form-control form-control-lg rounded-0' %>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-5">
			<div class="form-group">
				<%= form.label :address,class: 'mb-2'%>
				<%= form.text_field :address, class: 'form-control form-control-lg rounded-0' %>
			</div>
		</div>
		<div class="col-lg-5">
			<div class="form-group">
				<%= form.label :pincode,class: 'mb-2'%>
				<%= form.text_field :pincode, class: 'form-control form-control-lg rounded-0' %>
			</div>
		</div>
      </div>
	
	 <div class="row"> 
		<div class="col-lg-7 mt-6">
			<%= form.submit class: 'btn btn-primary btn-lg rounded-0'%>
			<%= link_to "Back to Employees",employees_path,class: "btn btn-outline_primary" %>
		</div>
	</div>
	<% end %>
</div>

